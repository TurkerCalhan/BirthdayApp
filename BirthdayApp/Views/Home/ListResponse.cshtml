@model IEnumerable<BirthdayApp.Models.UserResponse>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListResponse</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
</head>
<body>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Will Attend ? </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                if (item.WillAttend == true)
                {
                    <tr class="success">
                        <td>@item.Name</td>
                        <td>Yes, I will come</td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { @id = item.Id }, new { @class = "btn btn-primary btn-xs" })
                            @Html.ActionLink("Update", "Update", new { @id = item.Id }, new { @class = "btn btn-warning btn-xs" })
                            @Html.ActionLink("Delete", "Delete", new { @id = item.Id }, new { @class = "btn btn-danger btn-xs" })
                        </td>
                    </tr>
                }
                else
                {
                    <tr class="danger">
                        <td>@item.Name</td>
                        <td>No, I will not come</td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { @id = item.Id }, new { @class = "btn btn-primary btn-xs" })
                            @Html.ActionLink("Update", "Update", new { @id = item.Id }, new { @class = "btn btn-warning btn-xs" })
                            @Html.ActionLink("Delete", "Delete", new { @id = item.Id }, new { @class = "btn btn-danger btn-xs" })
                        </td>

                    </tr>
                }

            }
        </tbody>
    </table>
</body>
</html>
