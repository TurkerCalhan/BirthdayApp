@model BirthdayApp.Models.UserResponse
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ResponseForm</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>

    @if (ViewBag.Success != null)
    {
        <div class="alert alert-success" role="alert">
            @ViewBag.Success
        </div>
    }
    else
    {
        <div class="panel panel-success">
            <div class="panel-heading text-center"><h4>Birthday Party Form</h4></div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary()
                    <div class="form-group">
                        <label>Name</label>
                        @Html.TextBox("Name", null, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        @Html.TextBox("Email", null, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        @Html.TextBox("Phone", null, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>WillAttend</label>
                        @Html.DropDownList("WillAttend",
                   new[] {
                   new SelectListItem(){Text="Yes, I will come",Value=bool.TrueString},
                   new SelectListItem(){Text="No, I will not come",Value=bool.FalseString},
                   },
                   "Choose an optian",
                   new { @class = "form-control" }
                   )
                    </div>
                    <div class="text-center">
                        <input type="submit" value="Send" class="btn btn-success" />
                    </div>
                }
            </div>
        </div>
    }






</body>
</html>

